.grid-container {
        display: grid;
        grid-template-columns: 1fr 0.5fr 0.5fr 0.5fr 0.5fr;
        gap: 1em;
        margin-bottom: 6em;
    }

    .grid-item {
        overflow: hidden;
        border-radius: 8px;
    }

    .grid-item.large {
        grid-row: span 2;
    }

    .grid-item img {
        max-width: 100%;
        max-height: 100%;
        object-fit: cover;
    }

    .images-wrapper {
    display: flex;
