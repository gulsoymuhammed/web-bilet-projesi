@model webBiletProje.Models.User

@{
    ViewBag.Title = "Register";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>Biletim Kayıt Ol</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/Content/css/login.css">
    <link rel="stylesheet" href="~/Content/css/style.css">
</head>

<style>
</style>


<body class="login-body">
    <header class="header-login">
        <a href="main.html" class="logo">
            <img src="images/logo.png" alt="logo" />
        </a>
        <nav class="navbar">
            <a href="#">Konser </a>
            <a href="#">Tiyatro</a>
            <a href="#">Film</a>
            <a href="#">Bilet Al </a>
            <a href="iletisim.html">İletişim </a>
        </nav>
        <div class="buttons">
            <button>
                <a href="login.html"><i class="fa-regular fa-user" style="color: #000000;"></i></a>
            </button>
            <button>
                <i class="fa-solid fa-cart-shopping" style="color: #000000;"></i>
            </button>
        </div>
    </header>
    <div class="toast-container"></div>
    <div id="body-second">
        <div class="wrapper" id="wrapper-register">
            <div class="register">
                @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                {


                    <h1 id="change">Kayıt Ol</h1>



                    <div class="input-box-nameSurname" id="name">
                        <div class="input-box">
                            @Html.TextBoxFor(m => m.Name)
                            <i class='bx bx-user'></i>
                        </div>
                        <div class="input-box">
                            @Html.TextBoxFor(m => m.Surname)
                            <i class='bx bx-user'></i>
                        </div>
                    </div>
                    <div class="input-box" id="tcKimlikNumarasi">
                        <input type="text" placeholder="TC Kimlik Numarası" required>
                        <i class="fa-brands fa-odnoklassniki"></i>
                    </div>
                    <div class="input-box" id="e-mail">
                        @Html.TextBoxFor(m => m.MailAddress)
                        <i class="fa-solid fa-square-envelope"></i>
                    </div>
                    <div class="input-box" id="phoneNumber">
                        @Html.TextBoxFor(m => m.PhoneNumber)
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <div class="input-box" id="kullaniciadi">
                        @Html.TextBoxFor(m => m.Surname)
                        <i class='bx bx-user'></i>
                    </div>
                    <div class="gender-choose">
                        <form asp-action="Register" method="post" id="gender">
                            <table>
                                <tr>
                                    <td id="gender-space">Cinsiyet:</td>
                                    <td>
                                        <label id="gender-first-space">
                                            <input type="radio" asp-for="Sex" id="radioBtn_1" value="Kadın"> Kadın
                                        </label>
                                        <label>
                                            <input type="radio" asp-for="Sex" id="radioBtn_2" value="Erkek"> Erkek
                                        </label>
                                    </td>
                                </tr>
                            </table>
                        </form>
                    </div>
                    <div class="input-box" id="sifre">
                        @Html.TextBoxFor(m => m.Password)
                        <i class="fa-solid fa-phone"></i>
                        <i class='bx bxs-lock-alt'></i>
                    </div>
                    <div class="input-box" id="sifre_check">
                        <input type="password" placeholder="Şifreni doğrula" required>
                        <i class='bx bxs-lock-alt'></i>
                    </div>

                    <div class="input-box-sozlesme" id="sozlesme">
                        <input type="checkbox" required>Sözleşmeyi Kabul Et!
                    </div>
                    <br>
                    <button type="submit" class="btn">Kayıt Ol</button>

                    <div class="register-link">
                        <p>Aramıza hoş geldin <a href="main.html">Dibine kadar eğlence!</a></p>
                    </div>
                    <div class="register-link">
                        <p>Zaten üyeyim <a href="login.html">Giriş Yap!</a></p>
                    </div>

                }
            </div>
        </div>
    </div>
    <div class="login-bottom-space"></div>
    <!--! footer section start -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col">
                    <h4>Kurumsal</h4>
                    <ul>
                        <li><a href="#">Kişisel Verilerin Korunması</a></li>
                        <li><a href="#">Sözleşme ve Politikalar</a></li>
                        <li><a href="#">Entegre Yönetim Sistemi Politikası</a></li>
                        <li><a href="#">Hakkımızda</a></li>
                        <li><a href="#">Müşteri Hizmetleri</a></li>
                        <li><a href="#">Çerez Aydınlatma Metni</a></li>
                        <li><a href="#">Online Ödeme Koşulları</a></li>
                        <li><a href="#">İletişim</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Yardım</h4>
                    <ul>
                        <li><a href="#">SSS</a></li>
                        <li><a href="#">İptal,İade ve Değişim</a></li>
                        <li><a href="#">Nasıl Bilet Alınır</a></li>
                        <li><a href="#">Biletinizi Mi Kaybettiniz?</a></li>

                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Bizimle Çalışın</h4>
                    <ul>
                        <li><a href="#">İş Başvurusu</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Sosyal Medya</h4>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a> ,
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin-in"></i></a>

                    </div>
                </div>
            </div>
        </div>
    </footer>


    <!--! footer section end -->

</body>




</html>
